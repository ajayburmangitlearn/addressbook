#!groovy 
/*
=======================================
Auther:Deops
Date:01/01/2021
Purpose:To build frontend Java project
=======================================
*/

pipeline {

			agent
			{
				label 'master'
			}
			
			tools 
			{

					 maven 'mymaven'
					 jdk 'java11'
			 }

		stages 
			{
				stage('Validate Project')
					{
						steps
								{

									script
									{
										sh """
										mvn validate
										echo 'validate completed'
											"""
									}
								}

			
					}
			 stage('Compile Project')
					{
						steps	
							{

							script
								{
									sh """
									mvn compile
									echo 'Compile completed'
										"""
								}
							}

					}

			}
		}