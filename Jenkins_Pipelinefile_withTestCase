Purpose:To build frontend Java project
=======================================
*/

pipeline {

			agent
			{
				label 'master'
			}
			
			tools 
			{

					 maven 'mymaven'
					 jdk 'java11'
			 }

		stages 
			{
				stage('Code Checkout')
				{
				steps{
					git branch: 'main', credentialsId: 'devops_git_pipeline', url: 'https://github.com/devopstrainers1/addressbook.git'
					}
				}
			
				stage('Validate Project')
					{
						steps
								{

									script
									{
										bat """
										mvn validate
										echo 'validate completed'
											"""
									}
								}

			
					}
			 stage('Compile Project')
					{
						steps	
							{

							script
								{
									bat """
									mvn compile
									echo 'Compile completed'
										"""
								}
							}

					}
					
					stage('Testing')
					{
						steps	
							{

							script
								{
									bat """
									mvn test
									echo 'test completed'
										"""
								}
							}

					}
					
					

			}
			post
					{
						always
						{
						emailext body: 'devops extented email testing', recipientProviders: [developers()], subject: 'devops extented email ', to: 'mail2.kumarajay@gmail.com'	
						dir("${env.WORKSPACE}@tmp")
						{
						deleteDir()
						}
						}
						
					
					
					
					}
		}